<script>
    document.addEventListener('DOMContentLoaded', function() {
        const taxToggle = document.getElementById('taxToggle');
        const taxDetails = document.getElementById('taxDetails');
        const totalDisplay = document.getElementById('totalDisplay');
        const basePrice = parseInt('<%= listing.price %>');
        
        function formatPrice(amount) {
            return amount.toLocaleString("en-IN");
        }
        
        function toggleTaxDisplay() {
            if (taxToggle.checked) {
                taxDetails.classList.remove('hidden');
                totalDisplay.classList.remove('hidden');
                const total = basePrice + Math.round(basePrice * 0.18) + 99;
                totalDisplay.innerHTML = `<strong>Total: ₹${formatPrice(total)}</strong>`;
            } else {
                taxDetails.classList.add('hidden');
                totalDisplay.innerHTML = `<strong>Base Price: ₹${formatPrice(basePrice)}</strong>`;
            }
        }
        
        taxToggle.addEventListener('change', toggleTaxDisplay);
        
        // Initialize state
        toggleTaxDisplay();
    });
</script>

