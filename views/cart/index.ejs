<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3>Your Cart</h3>
        <% if (!cart || cart.items.length === 0) { %>
            <p>Your cart is empty.</p>
        <% } else { %>
            <ul class="list-group">
                <% let totalPrice = 0; %>
                <% for (let item of cart.items) { %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <h5><%= item.listing.title %></h5>
                            <p>Quantity: <%= item.quantity %></p>
                            <p>Price: &#8377;<%= item.listing.price.toLocaleString("en-IN") %></p>
                        </div>
                        <form action="/cart/<%= item.listing._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-danger btn-sm">Remove</button>
                        </form>
                    </li>
                    <% totalPrice += item.listing.price * item.quantity; %>
                <% } %>
            </ul>
            <div class="mt-4">
                <h4>Total Price: &#8377;<%= totalPrice.toLocaleString("en-IN") %></h4>
                <form action="/cart/book" method="POST">
                    <button class="btn btn-success mt-2">Book Now</button>
                </form>
            </div>
        <% } %>
    </div>
</div>