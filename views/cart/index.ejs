<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
    <div class="col-8 offset-2">
        <h3>Your Cart</h3>
        <% if (!cart || cart.items.length === 0) { %>
            <p>Your cart is empty.</p>
        <% } else { %>
            <ul class="list-group">
                <% let totalPrice = 0; %>
                <% for (let item of cart.items) { %>
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <h5><%= item.listing.title %></h5>
                            <p>Quantity: <%= item.quantity %></p>
                            <p>Price: &#8377;<%= item.listing.price.toLocaleString("en-IN") %></p>
                        </div>
                        <form action="/cart/<%= item.listing._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-danger btn-sm">Remove</button>
                        </form>
                    </li>
                    <% totalPrice += item.listing.price * item.quantity; %>
                <% } %>
            </ul>
            <div class="card mt-4 shadow-sm">
                <div class="card-body">
                    <h4 class="card-title mb-4">Price Details</h4>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span>Price (<%= cart.items.length %> items)</span>
                        <span>₹<%= totalPrice.toLocaleString("en-IN") %></span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span>GST (18%)</span>
                        <span>₹<%= Math.round(totalPrice * 0.18).toLocaleString("en-IN") %></span>
                    </div>
                    <div class="d-flex justify-content-between align-items-center mb-2">
                        <span>Booking Fee</span>
                        <span>₹99</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h5 class="fw-bold m-0">Total Amount</h5>
                        <h5 class="fw-bold m-0">₹<%= (totalPrice + Math.round(totalPrice * 0.18) + 99).toLocaleString("en-IN") %></h5>
                    </div>
                    <form action="/cart/book" method="POST">
                        <button type="submit" class="btn btn-success w-100 py-2">
                            <i class="fas fa-check-circle me-2"></i>Proceed to Book
                        </button>
                    </form>
                </div>
            </div>
        <% } %>
    </div>
</div>