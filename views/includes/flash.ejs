
<!-- styling of flash with help of bootstrap -->
<% if (success && success.length) { %>
 
    <div class="alert alert-success alert-dismissible fade show col-6 offset-3" role="alert">
        <!-- yha success variable ko use krege , ye success variable wo h jisse hum app.js ke andr as a middle ware use kiye hain -->
         <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
        <%= success %> 
        
    </div>
<% } %>

<% if (error && error.length) { %>

    <div class="alert alert-danger alert-dismissible fade show col-6 offset-3" role="alert">
        <!-- yha success variable ko use krege , ye success variable wo h jisse hum app.js ke andr as a middle ware use kiye hain -->
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
        <%= error %> 
        
    </div>
<% } %>